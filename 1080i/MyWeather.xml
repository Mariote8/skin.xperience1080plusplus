<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">101</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<allowoverlay>no</allowoverlay>
	<backgroundcolor>0</backgroundcolor>
	<controls>
		<include>CommonWeatherItems</include>
		<include>WeatherHeader</include>
		<control type="group">
			<include condition="!StringCompare(Weather.Plugin,weather.wunderground) | ![Skin.HasSetting(ShowWeatherFanart) + !IsEmpty(Skin.String(WeatherFanartDir))]">WeatherDefault</include>
			<include condition="StringCompare(Weather.Plugin,weather.wunderground) + Skin.HasSetting(ShowWeatherFanart) + !IsEmpty(Skin.String(WeatherFanartDir))">WeatherWunderground</include>
		</control>
		<include>FadeBackgroundContentContext</include>
		<control type="button" id="101">
			<description>open options</description>
			<onup>9111</onup>
			<ondown>9111</ondown>
			<visible>!StringCompare(Weather.Plugin,weather.wunderground) | ![Skin.HasSetting(ShowWeatherFanart) + !IsEmpty(Skin.String(WeatherFanartDir))]</visible>
		</control>
		<control type="group" id="9000">
			<include>ViewOptions.Panel</include>
			<control type="list" id="9111">
				<posx>0</posx>
				<posy>20</posy>
				<width>400</width>
				<height>880</height>
				<itemgap>0</itemgap>
				<onleft>40</onleft>
				<onright>40</onright>
				<include>GeneralOptionsAnimations</include>
				<itemlayout height="80">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>100</width>
						<height>100</height>
						<texture colordiffuse="eewhite">$INFO[ListItem.Icon]</texture>
						<aspectratio aligny="center">keep</aspectratio>
					</control>
					<control type="label">
						<posx>102</posx>
						<posy>0</posy>
						<width>260</width>
						<height>80</height>
						<font>Font-Condensed-S34</font>
						<align>left</align>
						<textcolor>mod-infotags-alt</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="80">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>380</width>
						<height>80</height>
						<texture border="5">$VAR[FocusModVar]</texture>
						<colordiffuse>$VAR[FocusModColourVar]</colordiffuse>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>100</width>
						<height>100</height>
						<texture colordiffuse="mod-infotags">$INFO[ListItem.Icon]</texture>
						<aspectratio aligny="center">keep</aspectratio>
					</control>
					<control type="label">
						<posx>102</posx>
						<posy>0</posy>
						<width>260</width>
						<height>80</height>
						<font>Font-Condensed-S34</font>
						<align>left</align>
						<textcolor>mod-infotags</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<description>Location</description>
						<label>$INFO[Weather.Location]</label>
						<icon>special://skin/extras/icons/xperience/world.png</icon>
						<onclick>Weather.LocationNext</onclick>
						<visible>true</visible>
					</item>
					<item id="2">
						<description>Refresh</description>
						<label>$LOCALIZE[184]</label>
						<icon>special://skin/extras/icons/xperience/arrows.png</icon>
						<onclick>Weather.Refresh</onclick>
						<visible>true</visible>
					</item>
					<item id="3">
						<description>Settings</description>
						<label>$LOCALIZE[5]</label>
						<icon>special://skin/extras/icons/xperience/settings.png</icon>
						<onclick>ActivateWindow(MyWeatherSettings)</onclick>
						<visible>true</visible>
					</item>
					<item id="4">
						<description>Hide fanart</description>
						<label>Hide/Show Fanart</label>
						<icon>special://skin/extras/icons/xperience/config2.png</icon>
						<selected>!Skin.HasSetting(ShowWeatherFanart)</selected>
						<onclick>setfocus(202)</onclick>
						<visible>true</visible>
					</item>
					<item id="8">
						<description>Set Fanart</description>
						<icon>special://skin/extras/icons/xperience/camera2.png</icon>
						<label>$LOCALIZE[41691]</label>
						<onclick>Skin.SetPath(WeatherFanartDir)</onclick>
					</item>
				</content>
			</control>
			<control type="grouplist" id="9222">
				<description>View Specific Controls</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>400</width>
				<height>720</height>
				<itemgap>0</itemgap>
				<onleft>9111</onleft>
				<onright>9111</onright>
				<onback>9111</onback>
				<onup>9222</onup>
				<ondown>9222</ondown>
				<include>SpecificOptionsAnimations</include>
				<control type="button" id="101">
					<description>Label</description>
					<posy>330</posy>
					<include>ViewOptions.Button2</include>
					<label>$LOCALIZE[42017]</label>
					<onclick>setfocus(9111)</onclick>
				</control>
			</control>
			<control type="grouplist" id="9223">
				<description>View Controls</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>400</width>
				<height>720</height>
				<itemgap>0</itemgap>
				<onleft>9111</onleft>
				<onright>9111</onright>
				<onback>9111</onback>
				<onup>9223</onup>
				<ondown>9223</ondown>
				<include>ViewOptionsAnimations</include>
				<control type="radiobutton" id="202">
					<description>List</description>
					<include>ViewOptions.Button</include>
					<label>$LOCALIZE[41690]</label>
					<texturefocus colordiffuse="$VAR[FocusModColourVar2]" border="2">dialogs/options/buttons/default-fo-colour.png</texturefocus>
					<selected>!Skin.HasSetting(ShowWeatherFanart)</selected>
					<onclick>Skin.ToggleSetting(ShowWeatherFanart)</onclick>
					<onclick condition="Skin.HasSetting(ShowWeatherFanart)">Skin.SetBool(ShowDailyWeatherFanart)</onclick>
					<onclick condition="!Skin.HasSetting(ShowWeatherFanart)">Skin.Reset(ShowDailyWeatherFanart)</onclick>
					<visible>true</visible>
					<textureradiofocus colordiffuse="$VAR[FocusModColourVar2]">buttons/radio/options-radio-button-fo-colour.png</textureradiofocus>
					<textureradionofocus>buttons/radio/options-radio-button-nf.png</textureradionofocus>
					<radioposx>-19</radioposx>
				</control>
				<control type="radiobutton" id="203">
					<description>List</description>
					<include>ViewOptions.Button</include>
					<label>$LOCALIZE[41692]</label>
					<texturefocus colordiffuse="$VAR[FocusModColourVar2]" border="2">dialogs/options/buttons/default-fo-colour.png</texturefocus>
					<onclick>Skin.ToggleSetting(ShowDailyWeatherFanart)</onclick>
					<selected>!Skin.HasSetting(ShowDailyWeatherFanart)</selected>
					<enable>!Skin.HasSetting(ShowWeatherFanart)</enable>
					<visible>!StringCompare(Weather.Plugin,weather.wunderground) | ![Skin.HasSetting(ShowWeatherFanart) + !IsEmpty(Skin.String(WeatherFanartDir))]</visible>
					<textureradiofocus colordiffuse="$VAR[FocusModColourVar2]">buttons/radio/options-radio-button-fo-colour.png</textureradiofocus>
					<textureradionofocus>buttons/radio/options-radio-button-nf.png</textureradionofocus>
					<radioposx>-19</radioposx>
				</control>
			</control>
		</control>
		<include>FadeBackground</include>
		<include>Common-Info</include>
	</controls>
</window>