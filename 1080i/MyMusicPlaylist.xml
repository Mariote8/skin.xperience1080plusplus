<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">60</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<allowoverlay>no</allowoverlay>
	<backgroundcolor>0</backgroundcolor>
	<views>54,60,552</views>
	<controls>
		<include>CommonItems</include>
		<include>MusicHeader</include>
		<include>MusicPlaylistViews</include>
		<include>FadeBackgroundContentContext</include>
		<control type="radiobutton" id="20">
			<description>Shuffle</description>
			<animation effect="fade" start="0" end="0" time="0" condition="true">Conditional</animation>
		</control>
		<control type="button" id="26">
			<description>Repeat</description>
			<animation effect="fade" start="0" end="0" time="0" condition="true">Conditional</animation>
		</control>
		<control type="button" id="21">
			<description>Save</description>
			<animation effect="fade" start="0" end="0" time="0" condition="true">Conditional</animation>
		</control>
		<control type="button" id="22">
			<description>Clear</description>
			<animation effect="fade" start="0" end="0" time="0" condition="true">Conditional</animation>
		</control>
		<control type="group" id="9000">
			<include>ViewOptions.Panel</include>
			<control type="list" id="9111">
				<posx>0</posx>
				<posy>20</posy>
				<width>400</width>
				<height>720</height>
				<itemgap>0</itemgap>
				<onleft>50</onleft>
				<onright>50</onright>
				<onback>50</onback>
				<onup>9111</onup>
				<ondown>9111</ondown>
				<include>GeneralOptionsAnimations</include>
				<itemlayout height="80">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>100</width>
						<height>100</height>
						<texture colordiffuse="eewhite">$INFO[ListItem.Icon]</texture>
						<aspectratio aligny="center">keep</aspectratio>
					</control>
					<control type="label">
						<posx>102</posx>
						<posy>0</posy>
						<width>260</width>
						<height>80</height>
						<font>Font-Condensed-S34</font>
						<align>left</align>
						<textcolor>mod-infotags-alt</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="80">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>380</width>
						<height>80</height>
						<texture border="5">$VAR[FocusModVar]</texture>
						<colordiffuse>$VAR[FocusModColourVar]</colordiffuse>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>100</width>
						<height>100</height>
						<texture colordiffuse="mod-infotags">$INFO[ListItem.Icon]</texture>
						<aspectratio aligny="center">keep</aspectratio>
					</control>
					<control type="label">
						<posx>102</posx>
						<posy>0</posy>
						<width>260</width>
						<height>80</height>
						<font>Font-Condensed-S34</font>
						<align>left</align>
						<textcolor>mod-infotags</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<description>View Mode</description>
						<label>$INFO[Container.ViewMode]</label>
						<icon>special://skin/extras/icons/xperience/config.png</icon>
						<onclick>setfocus(9223)</onclick>
						<visible>true</visible>
					</item>
					<item id="2">
						<description>Shuffle On</description>
						<icon>special://skin/extras/icons/xperience/yes.png</icon>
						<label>191</label>
						<onclick>SendClick(20)</onclick>
						<visible>SubString(Control.GetLabel(20),*)</visible>
					</item>
					<item id="3">
						<description>Shuffle Off</description>
						<icon>special://skin/extras/icons/xperience/no.png</icon>
						<label>191</label>
						<onclick>SendClick(20)</onclick>
						<visible>!SubString(Control.GetLabel(20),*)</visible>
					</item>
					<item id="4">
						<description>Repeat</description>
						<label>$INFO[Control.GetLabel(26)]</label>
						<onclick>SendClick(26)</onclick>
						<icon>special://skin/extras/icons/xperience/arrows.png</icon>
					</item>
					<item id="5">
						<description>Save</description>
						<label>190</label>
						<onclick>SendClick(21)</onclick>
						<icon>special://skin/extras/icons/xperience/downloads.png</icon>
					</item>
					<item id="6">
						<description>Clear</description>
						<label>192</label>
						<onclick>SendClick(22)</onclick>
						<icon>special://skin/extras/icons/xperience/downloads2.png</icon>
					</item>
				</content>
			</control>
			<control type="grouplist" id="9223">
				<description>View Controls</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>400</width>
				<height>720</height>
				<itemgap>0</itemgap>
				<onleft>9111</onleft>
				<onright>9111</onright>
				<onback>9111</onback>
				<onup>9223</onup>
				<ondown>9223</ondown>
				<include>ViewOptionsAnimations</include>
				<control type="button" id="201">
					<description>Label</description>
					<posy>330</posy>
					<include>ViewOptions.Button2</include>
					<label>$LOCALIZE[42017]</label>
					<onclick>setfocus(9111)</onclick>
				</control>
				<control type="radiobutton" id="202">
					<description>Info list</description>
					<include>optionsbuttonsdimensions</include>
					<label>Music low list</label>
					<texturefocus colordiffuse="$VAR[FocusModColourVar2]" border="2">dialogs/options/buttons/default-fo-colour.png</texturefocus>
					<onclick>Container.SetViewMode(54)</onclick>
					<selected>Control.IsVisible(54)</selected>
					<textureradioon colordiffuse="$VAR[FocusModColourVar2]">buttons/radio/options-radio-button-fo-colour.png</textureradioon>
					<textureradiooff>buttons/radio/options-radio-button-nf.png</textureradiooff>
					<radioposx>-19</radioposx>
				</control>
				<control type="radiobutton" id="203">
					<description>Info list</description>
					<include>optionsbuttonsdimensions</include>
					<label>Info list</label>
					<texturefocus colordiffuse="$VAR[FocusModColourVar2]" border="2">dialogs/options/buttons/default-fo-colour.png</texturefocus>
					<onclick>Container.SetViewMode(552)</onclick>
					<selected>Control.IsVisible(552)</selected>
					<textureradioon colordiffuse="$VAR[FocusModColourVar2]">buttons/radio/options-radio-button-fo-colour.png</textureradioon>
					<textureradiooff>buttons/radio/options-radio-button-nf.png</textureradiooff>
					<radioposx>-19</radioposx>
				</control>
				<control type="radiobutton" id="205">
					<description>Banner</description>
					<include>optionsbuttonsdimensions</include>
					<label>Banner</label>
					<texturefocus colordiffuse="$VAR[FocusModColourVar2]" border="2">dialogs/options/buttons/default-fo-colour.png</texturefocus>
					<onclick>Container.SetViewMode(60)</onclick>
					<selected>Control.IsVisible(60)</selected>
					<textureradioon colordiffuse="$VAR[FocusModColourVar2]">buttons/radio/options-radio-button-fo-colour.png</textureradioon>
					<textureradiooff>buttons/radio/options-radio-button-nf.png</textureradiooff>
					<radioposx>-19</radioposx>
				</control>
			</control>
		</control>
		<!-- Scrollbar visibility controls -->
		<control type="image" id="9773">
			<animation effect="fade" start="100" end="0" time="0" delay="1500">WindowOpen</animation>
		</control>
		<control type="image" id="9772">
			<animation effect="fade" start="0" end="100" time="0">Visible</animation>
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<visible>Control.HasFocus(70) | !Control.IsVisible(9773)</visible>
		</control>
		<control type="image" id="9772">
			<animation effect="fade" start="0" end="100" time="0">Visible</animation>
			<animation effect="fade" start="100" end="0" time="0" delay="1500">Hidden</animation>
			<visible>!Control.HasFocus(70) + [Container.Scrolling | Container.OnScrollNext | Container.OnScrollPrevious]</visible>
		</control>
		<include>FadeBackground</include>
		<include>Common-Info</include>
	</controls>
</window>